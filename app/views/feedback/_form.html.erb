<div class="card-body">
  <%= form_with local: true do |form| %>
    <div Ñlass="form-group">

      <p>
        <%= form.label :email, t('.from') %>
        <%= form.text_field :email,
                            value: current_user.email,
                            class: 'form-control',
                            required: true,
                            readonly: 'readonly' %>
      </p>

      <p>
        <%= form.label :title, t('.title') %>
        <%= form.text_field :title,
                           autofocus: true,
                           class: 'form-control',
                           required: true %>
      </p>

      <p>
        <%= form.label :text, t('.text') %>
        <%= form.text_area :text,
                            class: 'form-control',
                            rows: '4',
                            required: true
        %>
      </p>

      <p><%= form.submit t('.send'), class: 'btn btn-primary'  %></p>
    </div>
  <% end %>
</div>